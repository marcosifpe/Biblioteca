<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <el-resolver>
            org.primefaces.application.exceptionhandler.PrimeExceptionHandlerELResolver
        </el-resolver>
    </application>
    <factory>
        <exception-handler-factory>
            org.primefaces.application.exceptionhandler.PrimeExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
    <navigation-rule>
        <from-view-id>/publico/usuario.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cancelar</from-outcome>
            <to-view-id>/publico/login.xhtml</to-view-id>
        </navigation-case>        
    </navigation-rule>        
    <navigation-rule>
        <from-view-id>/publico/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/usuario/livros.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>falha</from-outcome>
            <to-view-id>/publico/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cadastrar</from-outcome>
            <to-view-id>/publico/usuario.xhtml</to-view-id>
        </navigation-case>        
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>sair</from-outcome>
            <to-view-id>/publico/login.xhtml</to-view-id>
        </navigation-case>        
    </navigation-rule>        
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>autor</from-outcome>
            <to-view-id>/admin/autor.xhtml</to-view-id>
        </navigation-case>        
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>editora</from-outcome>
            <to-view-id>/admin/editora.xhtml</to-view-id>
        </navigation-case>        
    </navigation-rule>           
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>livro</from-outcome>
            <to-view-id>/admin/livro.xhtml</to-view-id>
        </navigation-case>        
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>livros</from-outcome>
            <to-view-id>/usuario/livros.xhtml</to-view-id>
        </navigation-case>        
    </navigation-rule>     
</faces-config>
